<h3><%= @brands.name %></h3>

<i>Rename your brand</i>
<br><br>

<form action="/brands/<%= @brands.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="new_brand">New Brand Name</label>
  <input type="text" name="new_brand" id='new_brand' required>
  <button type="submit" class="btn green">Save</button>
</form><br><br>
<form action="/brands/<%= @brands.id %>" method="post" class="left delete-form">
 <input name="_method" type="hidden" value="delete">
 <button type="submit" class="btn red right">Delete</button>
</form>
