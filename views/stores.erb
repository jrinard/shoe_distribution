<h3>Store List</h3>
<br>
<!-- List all stores with a loop -->
<% if @stores.any?() %>
  <h5>Here are the stores we distribute to:</h5>
  <i>Select a specific store to modify it</i>
  <ul>
    <% @stores.each() do |store| %>
      <li><a href="/store/<%= store.id()%>"><span class="med teal-text"><h5><%= store.name() %></h5></span></a></li>
    <% end %>
  </ul>
<% else %>
    <p>There are no stores yet!</p>
<% end %>
